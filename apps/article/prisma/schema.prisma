datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Article {
  content          String?
  createdAt        DateTime @default(now())
  id               String   @id @default(cuid())
  shortDescription String?
  title            String?
  updatedAt        DateTime @updatedAt
}
